<Window x:Class="SistemaDeSeguridadIntegradoAvanzado.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SistemaDeSeguridadIntegradoAvanzado"
        mc:Ignorable="d"
        Title="Presentacion" Height="800" Width="800">
    <Grid Background="#1237a1">
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"></RowDefinition>
            <RowDefinition Height="auto"></RowDefinition>
            <RowDefinition Height="auto"></RowDefinition>
            <RowDefinition Height="*"></RowDefinition>
        </Grid.RowDefinitions>
        <Border  BorderBrush="Orange" BorderThickness="10" Margin="10" Grid.Row="0" CornerRadius="4" Background="#ffc523">
            <StackPanel Grid.Row="0" HorizontalAlignment="Center" VerticalAlignment="Center" >
                <TextBlock Text="Bienvenidos al Proyecto" Foreground="White" FontSize="37" HorizontalAlignment="Center"></TextBlock>
                <TextBlock Text="Plataforma Superior de Gestión y Defensa" Foreground="White" FontSize="39"></TextBlock>
            </StackPanel>
        </Border>
        <Border Grid.Row="1" Height="170" BorderBrush="Orange" BorderThickness="10" Margin="10" CornerRadius="4">
            <StackPanel Margin="10">
                <TextBlock Text="Estado de la puerta " Foreground="White" FontSize="30"></TextBlock>
                <WrapPanel>
                    <TextBlock Text="Puerta: " Foreground="White" FontSize="20"></TextBlock>
                    <TextBlock x:Name="puerta" Text="---" Foreground="White" FontSize="20"></TextBlock>
                </WrapPanel>
                <WrapPanel>
                    <TextBlock Text="Sensor: " Foreground="White" FontSize="20"></TextBlock>
                    <TextBlock x:Name="sensor" Text="---" Foreground="White" FontSize="20"></TextBlock>
                </WrapPanel>
                <WrapPanel>
                    <TextBlock Text="Estado de la puerta: " Foreground="White" FontSize="20"></TextBlock>
                    <TextBlock x:Name="estadoPuerta" Text="---" Foreground="White" FontSize="20"></TextBlock>
                </WrapPanel>
                <TextBlock Text=""></TextBlock>
            </StackPanel>
        </Border>
        <Border BorderBrush="Orange" BorderThickness="10" CornerRadius="4" Grid.Row="2" Margin="10" Height="130">
            <StackPanel >
                <TextBlock Margin="10" Text="Controles" Foreground="White" FontSize="30"></TextBlock>
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" >
                    <Button x:Name="btnAbrir" Content="Abrir Puerta" Width="90" Height="30" Margin="0,5,20,30" Click="btnAbrir_Click"></Button>
                    <Button x:Name="btnCerrar" Content="Cerrar Puerta" Width="90" Height="30" Margin="0,5,20,30" Click="btnCerrar_Click"></Button>
                    <Button x:Name="btnBloquear" Content="Bloquear" Width="90" Height="30" Margin="0,5,20,30" Click="btnBloquear_Click"></Button>
                    <Button x:Name="btnDesbloquear" Content="Desbloquear" Width="90" Height="30" Margin="0,5,20,30" Click="btnDesbloquear_Click"></Button>
                </StackPanel>
            </StackPanel>
        </Border>
        <Border BorderBrush="Orange" BorderThickness="10" CornerRadius="4" Grid.Row="3" Margin="10" >
            <StackPanel Margin="10">
                <TextBlock Text="Informacion del Sistema" Foreground="White" FontSize="20"></TextBlock>
                <WrapPanel>
                    <TextBlock x:Name="hora1" Text="[Hora]" Foreground="White" FontSize="20"></TextBlock>
                    <TextBlock x:Name="inf1" Text="---" Foreground="White" FontSize="20"></TextBlock>
                </WrapPanel>
                <WrapPanel>
                    <TextBlock x:Name="hora2" Text="[Hora]" Foreground="White" FontSize="20"></TextBlock>
                    <TextBlock x:Name="inf2" Text="---" Foreground="White" FontSize="20"></TextBlock>
                </WrapPanel>
                <WrapPanel>
                    <TextBlock x:Name="hora3" Text="[Hora]" Foreground="White" FontSize="20"></TextBlock>
                    <TextBlock x:Name="inf3" Text="---" Foreground="White" FontSize="20"></TextBlock>
                </WrapPanel>
                <WrapPanel>
                    <TextBlock x:Name="hora4" Text="[Hora]" Foreground="White" FontSize="20"></TextBlock>
                    <TextBlock x:Name="inf4" Text="---" Foreground="White" FontSize="20"></TextBlock>
                </WrapPanel>
                <WrapPanel>
                    <TextBlock x:Name="hora5" Text="[Hora]" Foreground="White" FontSize="20"></TextBlock>
                    <TextBlock x:Name="inf5" Text="---" Foreground="White" FontSize="20"></TextBlock>
                </WrapPanel>
            </StackPanel>
        </Border>
        <Canvas>
            <Image Source="/imagenes/5bafcbec554c7f08176ec076.png" Canvas.Left="554" Canvas.Top="527" Height="292" Width="257" HorizontalAlignment="Left" VerticalAlignment="Top"></Image>
        </Canvas>
    </Grid>
</Window>
